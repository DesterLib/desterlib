# Dester API - Environment Variables Template
# Copy this file to .env.local and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000

# PostgreSQL Database (from docker-compose.dev.yml)
DATABASE_URL=postgresql://dester:dester_dev@localhost:5432/dester_dev?schema=public
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=10

# Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=change-this-in-production-min-32-chars-long-jwt-secret-key
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=change-this-refresh-secret-min-32-chars-long-key
REFRESH_TOKEN_EXPIRES_IN=30d
API_KEY_PREFIX=dester

# Redis Cache (from docker-compose.dev.yml)
CACHE_ENABLED=true
REDIS_URL=redis://:redis_dev@localhost:6379
CACHE_TTL=3600

# CORS
CORS_ORIGIN=http://localhost:5173
WEB_URL=http://localhost:5173

# External APIs
TMDB_API_KEY=your-tmdb-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Backup Configuration
# Set to true to use Docker's pg_dump (recommended when PostgreSQL runs in Docker)
USE_DOCKER_PGDUMP=true
POSTGRES_CONTAINER_NAME=dester-postgres-dev

# Optional: Backup directory (defaults to ./backups)
# BACKUP_DIR=/path/to/backups

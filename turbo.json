{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", ".eslintrc.*", "eslint.config.*"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"]
    },
    "format": {
      "inputs": ["$TURBO_DEFAULT$", ".prettierrc*", "prettier.config.*"],
      "outputs": []
    },
    "format:check": {
      "inputs": ["$TURBO_DEFAULT$", ".prettierrc*", "prettier.config.*"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "start": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "db:generate": {
      "inputs": ["prisma/schema.prisma", "package.json"],
      "outputs": ["generated/**"]
    },
    "db:push": {
      "dependsOn": ["db:generate"],
      "cache": false
    },
    "db:migrate": {
      "dependsOn": ["db:generate"],
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
